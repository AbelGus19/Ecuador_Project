{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/payments": {
      "post": {
        "summary": "Create a payment",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderId": { "type": "string" },
                  "amount": { "type": "number" },
                  "method": { "type": "string" }
                },
                "required": ["orderId", "amount", "method"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Payment created" }
        }
      }
    },
    "/api/payments/my": {
      "get": {
        "summary": "Get my payments",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of user payments",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Payment" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "Payment": {
        "type": "object",
        "properties": {
          "orderId": { "type": "string" },
          "amount": { "type": "number" },
          "method": { "type": "string" },
          "paidAt": { "type": "string", "format": "date-time" },
          "paidBy": { "type": "string" }
        }
      }
    }
  }
}